/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/scovtree -profile test_gisaid,<docker/singularity>
 */

params {
  config_profile_name = 'Test profile'
  config_profile_description = 'Minimal test dataset to check pipeline function'
  // Limit resources so that this can run on GitHub Actions
  max_cpus             = 2
  max_memory           = 2.GB
  max_time             = 48.h

  // Input data
  input                = 'https://raw.githubusercontent.com/nhhaidee/nf-test-datasets/main/consensus_sequences.fasta'
  reference_name       = 'MN908947.3'
  reference_fasta      = 'https://raw.githubusercontent.com/nhhaidee/nf-test-datasets/main/nCoV-2019.reference.fasta'
  substitution_model   = 'GTR'

  //Input options for filtering sequence against GISAID Database
  filter_gisaid        = true
  gisaid_sequences     = 'https://raw.githubusercontent.com/nhhaidee/nf-test-datasets/main/example_ncbi_sequences.fasta'
  gisaid_metadata      = 'https://raw.githubusercontent.com/nhhaidee/nf-test-datasets/main/example_ncbi_metadata.tsv'
  country              = ''
  region               = ''
  sample_lineage       = ''
  lmin                 = 27000
  lmax                 = 32000
  xambig               = 3000
  msa_threshold_filter = 10000
  max_taxa             = 50
  visualize_gisaid_metadata  = 'Virus_name,Type,Location,Clade,Variant,AA_Substitutions,Submission_date,Is_reference?'
  visualize_aa_change = false

  //Multiple Sequence Alignment
  //nextalign                         = false

}
